<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.ScrollViewSizeBug"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ScrollViewSizeBug">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <HorizontalStackLayout Grid.Row="0">
            <Button Clicked="Button_Clicked" Text="IncreaseHeight" />
            <Button Clicked="Button_Clicked_1" Text="DecreaseHeight" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>