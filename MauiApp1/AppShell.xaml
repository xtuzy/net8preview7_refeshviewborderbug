<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Title="MauiApp1"
    Shell.FlyoutBehavior="Flyout">
    <ShellContent
        Title="RefreshView+Border_Bug"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="NoBorder_Work"
        ContentTemplate="{DataTemplate local:NoBorder}"
        Route="NoBorder" />
    <ShellContent
        Title="NoRefreshView_Work"
        ContentTemplate="{DataTemplate local:NoRefreshView}"
        Route="NoRefreshView" />
    <ShellContent
        Title="ScrollViewSizeBug"
        ContentTemplate="{DataTemplate local:ScrollViewSizeBug}"
        Route="ScrollViewSizeBug" />
</Shell>
